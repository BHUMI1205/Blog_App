<!doctype html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> Free Dental Medical Hospital Website Template | Smarteyeapps.com</title>

    <link rel="shortcut icon" href="public/images/fav.jpg">
    <link rel="stylesheet" href="public/css/bootstrap.min.css">
    <link rel="stylesheet" href="public/css/fontawsom-all.min.css">
    <link rel="stylesheet" type="text/css" href="public/css/style.css" />
  </head>

  <body class="h-100">
    <div class="container-fluid full-bg h-100">
      <div class="container h-100">
        <div class="row no-margin h-100">
          <div class="bg-layer d-flex col-md-4">
            <form action="/new_password" method="post">
              <div class="login-box row">
                <h3>User Email</h3>
                <% if (successMessages.length>0) { %>
                <div class="alert alert-success">
                  <%=successMessages%>
                </div> 
                <% } %>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i
                        class="fas fa-at"></i></span>
                  </div>
                  <input type="text" name="password" class="form-control"
                    placeholder="Add New Password">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1"><i
                          class="fas fa-at"></i></span>
                    </div>
                    <input type="text" name="cpassword" class="form-control"
                      placeholder="Confirm Password">
                  </div>
                <button class="btn btn-success">Click to Login</button>
              </div>
            </form>
          </div>
        </div>
      </div>

    </div>
  </body>

  <script src="public/js/jquery-3.2.1.min.js"></script>
  <script src="public/js/popper.min.js"></script>
  <script src="public/js/bootstrap.min.js"></script>
  <script src="public/js/script.js"></script>

</html>